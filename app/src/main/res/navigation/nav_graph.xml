<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/startFragment">

    <fragment
        android:id="@+id/searchUsersFragment"
        android:name="ru.zaytsev.githubtest.ui.search.SearchUsersFragment"
        android:label="SearchUsersFragment"
        tools:layout="@layout/fragment_search_users">
        <action
            android:id="@+id/action_searchUsersFragment_to_userDetailFragment"
            app:destination="@id/userDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/userDetailFragment"
        android:name="ru.zaytsev.githubtest.ui.details.UserDetailFragment"
        android:label="UserDetailFragment"
        tools:layout="@layout/fragment_user_detail">
        <argument
            android:name="login"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/startFragment"
        android:name="ru.zaytsev.githubtest.ui.auth.StartFragment"
        android:label="StartFragment"
        tools:layout="@layout/fragment_start" >
        <action
            android:id="@+id/action_startFragment_to_searchUsersFragment"
            app:destination="@id/searchUsersFragment" />
        <action
            android:id="@+id/action_startFragment_to_mainFragment"
            app:destination="@id/mainFragment"
            app:launchSingleTop="false"
            app:popUpTo='@id/startFragment'
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/mainFragment"
        android:name="ru.zaytsev.githubtest.ui.main.MainFragment"
        android:label="MainFragment"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_mainFragment_to_searchUsersFragment"
            app:destination="@id/searchUsersFragment" />
        <action
            android:id="@+id/action_mainFragment_to_userDetailFragment"
            app:destination="@id/userDetailFragment" />
        <action
            android:id="@+id/action_mainFragment_to_editUserInfoFragment"
            app:destination="@id/editUserInfoFragment" />
        <action
            android:id="@+id/action_mainFragment_to_startFragment"
            app:destination="@id/startFragment"
            app:popUpTo='@id/mainFragment'
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/editUserInfoFragment"
        android:name="ru.zaytsev.githubtest.ui.edit.EditUserInfoFragment"
        android:label="EditUserInfoFragment"
        tools:layout="@layout/fragment_edit_user_info"/>
</navigation>